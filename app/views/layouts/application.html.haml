%html
  %head
    %meta{:'http-equiv' => 'Content-Type', content: 'text/html; charset=UTF-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=edge, chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}
    %meta{name: 'renderer', content: 'webkit'}
    %meta{name: 'action-cable-url', content: '/cable'}

    %title 正道中医

    = csrf_meta_tags

    = stylesheet_link_tag :zhengdao, :'data-turbolinks-track' => :reload
    = javascript_include_tag :zhengdao, :'data-turbolinks-track' => :reload

    - if @extra_js
      = javascript_include_tag @extra_js, :'data-turbolinks-track' => :reload

  %body
    = render partial: 'layouts/data'
    = react_component @content_component[:layout]